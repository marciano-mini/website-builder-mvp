// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user")
  locale        String    @default("en")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  subscription Subscription?
  payments     Payment[]
  projects     Project[]
}

// SaaS Models
model Subscription {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tier              String
  status            String
  stripeCustomerId  String?
  stripeSubscriptionId String?
  currentPeriodEnd  DateTime?
  cancelAtPeriodEnd Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  payments Payment[]
}

model Payment {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptionId  String?
  subscription    Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  amount          Int
  currency        String       @default("eur")
  status          String
  stripePaymentId String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

// WEBSITE BUILDER MODELS

model Project {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  slug        String   @unique
  description String?
  status      String   @default("draft") // "draft" | "published" | "archived"
  templateId  String?

  domain      String?  // Custom domain (future: marciaanoplanque.nl)
  isPublic    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pages       Page[]
  template    Template? @relation(fields: [templateId], references: [id])

  @@index([userId])
}

model Page {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  title       String
  slug        String
  type        String   // "home" | "about" | "contact" | "services" | "blog" | "pricing" | "gallery" | "custom"
  content     String   @db.Text // JSON content
  order       Int      @default(0)

  isPublished Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([projectId, slug])
  @@index([projectId])
}

model Template {
  id          String   @id @default(cuid())

  name        String
  nameNL      String
  description String
  descriptionNL String
  category    String   // "horeca" | "webshop" | "bouw" | "beauty" | "fitness" | "zakelijk" | "diensten" | "specialisten"

  previewImage String?
  structure   String   @db.Text // JSON template structure

  isFree      Boolean  @default(true)
  isIndustry  Boolean  @default(true) // = industry-specific template

  popularity  Int      @default(0)

  createdAt   DateTime @default(now())

  projects    Project[]

  @@index([category])
  @@index([isFree])
  @@index([isIndustry])
}